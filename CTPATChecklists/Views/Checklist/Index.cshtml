@model IEnumerable<CTPATChecklists.Models.Checklist>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    @{
    ViewData["Title"] = "Lista de Checklists";
    var esGuardia = User.IsInRole("Guardia");
    var esAdmin = User.IsInRole("Administrador") || User.IsInRole("Superusuario");
    var esConsultor = User.IsInRole("Consultor");
    }

    <h2>@ViewData["Title"]</h2>

    <!-- Solo algunos roles pueden crear nuevos checklists -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        @if (esGuardia || esAdmin)
    {
        <a asp-action="Create" class="btn btn-success">Nuevo Checklist</a>
    }
        <div>
            <!-- Placeholder para futuros filtros/responsive controls -->
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Placa</th>
                    <th>Chofer</th>
                    <th class="d-none d-sm-table-cell">Empresa</th>
                    <th class="d-none d-md-table-cell">ID Caja</th>
                    <th>Movimiento</th>
                    @if (esAdmin || esConsultor)
                {
                    <th class="d-none d-lg-table-cell">Creado por</th>
                }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FechaHora.ToString("g")</td>
                    <td>@item.Placa</td>
                    <td>@item.Operador</td>
                    <td class="d-none d-sm-table-cell">@item.Empresa</td>
                    <td class="d-none d-md-table-cell">@item.IdCajaTrailer</td>
                    <td>
                        @if (item.EsEntrada==true)
                        {
                        <span class="text-success">✔️ Entrada</span>
                        }
                        else
                        {
                        <span class="text-danger">✖️ Salida</span>
                        }
                    </td>
                    @if (esAdmin || esConsultor)
                    {
                    <td class="d-none d-lg-table-cell">@item.Usuario?.DisplayName</td>
                    }
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link p-0">Ver</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
