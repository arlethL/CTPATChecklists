@model CTPATChecklists.Models.EditRolesViewModel
@{
    ViewData["Title"] = "Editar Roles";
}

<h2>@ViewData["Title"] – @Model.Email</h2>

<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input asp-for="Roles[@i].Selected" class="form-check-input" />
                <label class="form-check-label">@Model.Roles[i].RoleName</label>
                <input type="hidden" asp-for="Roles[@i].RoleName" />
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Guardar Roles</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>