@{
    ViewData["Title"] = "Canjear nueva licencia";
}

<div class="container mt-5 text-center">
    <h2 class="text-primary">🎫 Canjear Licencia</h2>
    <p>Puedes canjear un nuevo código de activación para extender la licencia de tu empresa.</p>

    @if (TempData["Exito"] != null)
    {
    <div class="alert alert-success mt-3">@TempData["Exito"]</div>
    }
    else if (TempData["Error"] != null)
    {
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
    }

    <div class="card p-4 bg-dark text-white mx-auto mt-4" style="max-width: 420px;">
        <h5 class="mb-3">Canjear código de activación</h5>

        <form asp-action="CanjearDesdeAdmin" method="post">
            @Html.AntiForgeryToken()

            <input type="text" name="codigo" class="form-control mb-3 text-dark" placeholder="Código de activación" required />

            <button type="submit" class="btn btn-success w-100">
                ✅ Canjear
            </button>
        </form>
    </div>
</div>
