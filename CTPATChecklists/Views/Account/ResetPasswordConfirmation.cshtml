@{
    ViewData["Title"] = "Contraseña restablecida";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: linear-gradient(to right, #0047ab, #00c6ff);
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1.5rem;
        }

        .confirmation-box {
            background-color: white;
            border-radius: 1.5rem;
            padding: 2.5rem 2rem;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            max-width: 420px;
            width: 100%;
        }

        h2 {
            color: #0047ab;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        p {
            margin-bottom: 1.5rem;
        }

        .btn-success {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="confirmation-box">
        <h2>@ViewData["Title"]</h2>
        <p>Tu contraseña se restableció correctamente. Ahora puedes iniciar sesión con la nueva contraseña.</p>
        <a asp-action="Login" asp-controller="Account" class="btn btn-success">Ir al Login</a>
    </div>
</body>
</html>
