@{
    ViewData["Title"] = "Vista previa del PDF";
    var pdfPath = ViewBag.FilePath as string;
}

<h2>Vista previa del reporte</h2>

<iframe src="@pdfPath" width="100%" height="800px" style="border: 1px solid #ccc;"></iframe>

<p class="mt-3">
    <a href="@pdfPath" class="btn btn-success" download>Descargar PDF</a>
    <a href="@Url.Action("Index", "Reportes")" class="btn btn-secondary">Volver</a>
</p>
